<!-- navbar -->
{{!-- rootView --}}

<nav class="navbar navbar-expand-lg navbar-light shadow-2 sticky-top" style="background: #fff;">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold text-dark" href="{{#if isAuthenticated}}/admin/cp_list{{else}}/{{/if}}">
            <span class="material-icons me-2" style="vertical-align: middle; color: #111;">bolt</span>
            <span style="color: #111; font-size: 1.5rem;">EMS 能源管理系統</span>
        </a>
        <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="material-icons">menu</span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                {{#if isAuthenticated}}
                    {{#equal user.role 'admin'}}
                        <li class="nav-item d-flex align-items-center">
                            <span class="nav-link text-dark">
                                <span class="material-icons me-1" style="font-size:20px;vertical-align:middle;">person</span>
                                {{user.email}}
                            </span>
                            <a href="/admin/sign-out" class="btn btn-primary ms-2 d-flex align-items-center ripple" style="border-radius:4px; font-weight:500;">
                                <span class="material-icons me-1" style="font-size:20px;vertical-align:middle;">logout</span> 登出
                            </a>
                        </li>
                    {{/equal}}
                    {{#equal user.role 'user'}}
                        <li class="nav-item d-flex align-items-center">
                            <span class="nav-link text-dark">
                                <span class="material-icons me-1" style="font-size:20px;vertical-align:middle;">person</span>
                                {{user.email}}
                            </span>
                            <a href="/order" class="btn btn-link ms-2 ripple">
                                <span class="material-icons me-1" style="vertical-align:middle;">list_alt</span> Orders
                            </a>
                            <a href="/cart" class="btn btn-link ms-2 ripple">
                                <span class="material-icons me-1" style="vertical-align:middle;">shopping_cart</span> Cart
                            </a>
                            <a href="/users/sign-out" class="btn btn-outline-primary ms-2 ripple">登出</a>
                        </li>
                    {{/equal}}
                {{else}}
                    {{!-- <li class="nav-item">
                        <a href="/admin/sign-in" class="btn btn-primary ripple">SignIn</a>
                    </li> --}}
                {{/if}}
            </ul>
        </div>
    </div>
</nav>

