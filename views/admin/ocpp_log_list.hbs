<head>
  <meta http-equiv="refresh" content="30">
</head>

<div style="min-height: 100vh; display: flex; background: #f5f6fa;">
    <nav style="min-width: 240px; width: 240px; border-right: 1px solid #eee; height: 100vh; overflow-y: auto; position: sticky; top: 0;">
        {{> admin-nav }}
    </nav>
    <main style="flex-grow: 1; display: flex; flex-direction: column; align-items: center; justify-content: flex-start; ">
        <div class="card shadow-lg p-4 mt-4" style="width: 100%; height: 100%; border-radius: 0; background: #fff; flex: 1 1 0;">
            <div class="d-flex align-items-center mb-4">
                <span class="material-icons me-2" style="font-size:2rem; color:#b5cc39;">list_alt</span>
                <h4 class="mb-0 fw-bold" style="color:#111;">OCPP Log List</h4>
            </div>
            {{> message}}
                    <div class="mb-3 d-flex justify-content-end">
                        <div class="form-floating" style="min-width:240px;">
                            <input type="text" class="form-control" id="filterCPSN" placeholder="過濾 CPSN">
                            <label for="filterCPSN">過濾 CPSN</label>
                        </div>
                    </div>
                    <div class="table-responsive">
                <table class="table table-hover align-middle" style="border-radius:12px; overflow:hidden;">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="text-center" style="color:#b5cc39; font-weight:500;">CPSN</th>
                            <th scope="col" class="text-center" style="color:#b5cc39; font-weight:500;">Log</th>
                            <th scope="col" class="text-center" style="color:#b5cc39; font-weight:500;">In/Out</th>
                            <th scope="col" class="text-center" style="color:#b5cc39; font-weight:500;">Time</th>
                        </tr>
                    </thead>
                            <tbody id="logTableBody">
                                {{#each ocpp_log_list}}
                                    <tr style="height: 40px">
                                        <td class="text-center align-middle">{{this.cpsn}}</td>
                                        <td class="text-center align-middle" style="word-break:break-all;">{{this.log}}</td>
                                        <td class="text-center align-middle">
                                            {{#equal this.inout "in"}}
                                                <span class="badge bg-primary">IN</span>
                                            {{else}}
                                                <span class="badge bg-success">OUT</span>
                                            {{/equal}}
                                        </td>
                                        <td class="text-center align-middle" style="font-size:0.95rem; color:#666;">{{this.time}}</td>
                                    </tr>
                                {{/each}}
                            </tbody>
                </table>
            </div>
        </div>
    </main>
<script>
document.getElementById('filterCPSN').addEventListener('input', function() {
    const filter = this.value.trim().toLowerCase();
    const rows = document.querySelectorAll('#logTableBody tr');
    rows.forEach(row => {
        const cpsn = row.children[0].textContent.trim().toLowerCase();
        row.style.display = cpsn.includes(filter) ? '' : 'none';
    });
});
</script>
</div>
